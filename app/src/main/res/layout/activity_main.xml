<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/user"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_above="@+id/password1"
        android:layout_alignStart="@+id/password1"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/inputmain"

        android:drawableLeft="@drawable/user"
        android:hint="User Name" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_above="@+id/Forgot"

        android:layout_marginStart="50dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/inputmain"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/Forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_alignStart="@+id/password1"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="24dp"
        android:text="	 Forgot account?" />

    <Button
        android:id="@+id/login"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Forgot"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/buttonmain"
        android:text="login"
        android:textColor="#FFFFFFFF" />


    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login"
        android:layout_marginStart="23dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@+id/login"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/buttonmain"
        android:text="Sign Up " />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="245dp"
        android:layout_height="176dp"
        android:layout_above="@+id/user"
        android:layout_alignEnd="@+id/user"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/books" />


</RelativeLayout>