<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp">

    <EditText
        android:id="@+id/repassword2"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_below="@+id/password1"
        android:layout_alignStart="@+id/password1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/inputmain"
        android:drawableLeft="@drawable/password"
        android:hint="  Password Confirmation" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_below="@+id/user"
        android:layout_alignStart="@+id/user"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/inputmain"
        android:drawableLeft="@drawable/password"
        android:hint="  Password" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/inputmain"
        android:drawableLeft="@drawable/phone"
        android:digits="1234567890"
        android:hint="  Phone Number" />

    <EditText
        android:id="@+id/email"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_below="@+id/repassword2"
        android:layout_alignStart="@+id/repassword2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/inputmain"
        android:drawableLeft="@drawable/email"
        android:hint="  Your E-mail" />

    <EditText
        android:id="@+id/user"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/inputmain"
        android:drawableLeft="@drawable/user"
        android:hint="  User Name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="85dp"
        android:layout_height="650dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/repassword2"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="130dp"
        android:layout_height="57dp"
        android:layout_below="@+id/showpath"
        android:layout_alignParentStart="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonmain"
        android:text="Sign up"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/address"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_below="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputmain"
        android:hint="address"  />

    <TextView
        android:id="@+id/showpath"
        android:layout_width="196dp"
        android:layout_height="29dp"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/getimage"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/showpath"

        android:layout_alignBottom="@+id/NameBooks"
        android:layout_toEndOf="@+id/showpath"
        android:background="@drawable/selectimage"
        android:text=" " />
</RelativeLayout>