<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageBookk"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/BtitelBook"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageBookk"
                android:text="titel" />

            <TextView
                android:id="@+id/BabstractBook"
                android:layout_width="187dp"
                android:layout_height="58dp"
                android:layout_below="@+id/BtitelBook"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageBookk"
                android:text="abstract" />

            <Button
                android:id="@+id/Blike"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/BtitelBook"
                android:layout_marginStart="25dp"

                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/BtitelBook"
                android:background="@drawable/like" />

            <TextView
                android:id="@+id/noLike"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Blike"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/Blike"
                 />

            <Button
                android:id="@+id/Bunlike"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:layout_below="@+id/Blike"

                android:layout_alignStart="@+id/Blike"
                android:layout_marginTop="17dp"
                android:background="@drawable/unlike" />

            <TextView
                android:id="@+id/noUnlike"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Bunlike"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/Bunlike"
                 />

            <TextView
                android:id="@+id/BtextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BabstractBook"
                android:layout_alignStart="@+id/BabstractBook"
                android:layout_alignParentBottom="true"
                android:text="Number of copies:  " />

            <TextView
                android:id="@+id/noCopie"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/BtextView4"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/BtextView4"
                 />

            <TextView
                android:id="@+id/vPrice"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BabstractBook"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-1dp"
                android:layout_toEndOf="@+id/noCopie"
                android:text="Price" />
            <TextView
                android:id="@+id/Price"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/vPrice"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/vPrice"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>